<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutTrabahope">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:background="@drawable/gradient_drawable"
        android:layout_height="60dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/back_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Search Jobs" />




    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/downloadnowfinal"
            android:textColor="@color/colorAccent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginTop="10dp"
            android:textColor="@color/heading"
            android:gravity="center_horizontal"
            android:text="ABOUT US"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:text="TRABAHOPE: AN ONLINE COMMUNITY-BASED JOB PORTAL FOR DISPLACED WORKERS
" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:text="Regardless of your background, times today are tough. While uneven economies around the world have made it incredibly difficult for many people to find work, the recent COVID pandemic has made things worse." />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/subheading"
            android:layout_height="wrap_content"
            android:text="Trabahope that gives hope\n for displaced workers " />



        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@color/heading"
            android:text="Contact" />


    </LinearLayout>


</RelativeLayout>