<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>
        <ImageView
            android:id="@+id/back_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_close_24" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/heading"
            android:text="Filter" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/subheading"
            android:layout_marginBottom="5dp"
            android:text="Job Type"
            android:textSize="18dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkPartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Part-time" />

        <CheckBox
            android:id="@+id/checkFullTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full-time" />

        <CheckBox
            android:id="@+id/checkContract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contract" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/JobLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Job Level"
            android:textSize="18dp"
            android:textColor="@color/subheading"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkEntryLvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Level" />

        <CheckBox
            android:id="@+id/checkExperiencedLvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experienced (2 - 4  years Jr. Level)" />

        <CheckBox
            android:id="@+id/checkAdvancedLvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced Employee (5+ years of experience, team leaders, senior level)" />

        <CheckBox
            android:id="@+id/checkManagerialLvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Managerial (Supervisors, Assistant Managers, Department Head, Managers)" />

        <CheckBox
            android:id="@+id/checkTopManagementLvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Mangement (Director, GM, VP, C-Level)" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>


    </LinearLayout>


</RelativeLayout>