<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/backnew">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:background="@drawable/gradient_drawable"
        android:layout_height="60dp" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/back_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Profile" />

        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_baseline_edit_note_24" />



    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="65dp"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/img" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/heading"
                android:text="Active" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First Name"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Last Name" />
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/heading"
                android:text="CONTACT WORKER"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/ic_baseline_business_24"
                    android:text="Displaced Worker Information"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/tex10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="Position: "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/prevPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp"
                    android:text="Previous company: "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/prevCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:text="Displaced date:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/displacedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:text="No. of years working:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/companyYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/texs11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="15dp"
                    android:text="Displacement type:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/displacedType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Basic Information"
                    android:drawableLeft="@drawable/ic_basicinfo"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/tex5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="Age:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tex6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp"
                    android:text="Sex:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tex13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:text="Civil Statuts:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/civilStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:text="Location:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="15dp"
                    android:text="Barangay:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/barangay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginBottom="15dp"
                    android:text="Email:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/eMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tex12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginBottom="15dp"
                    android:text="Contact:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Work Experience"
                    android:drawableLeft="@drawable/ic_skills"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Education"
                    android:drawableLeft="@drawable/ic_education"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>