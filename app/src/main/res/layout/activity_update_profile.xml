<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/backnew">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:background="@drawable/gradient_drawable"
        android:layout_height="60dp" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_drawable"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/back_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Update profile" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="65dp"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/img" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First Name"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Last Name" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Basic Information"
                    android:drawableLeft="@drawable/ic_basicinfo"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/tex5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="Age:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tex6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp"
                    android:text="Sex:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tex13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:text="Civil Statuts:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewCivilStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:text="Location:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="15dp"
                    android:text="Barangay:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewBarangay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texs9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginBottom="15dp"
                    android:text="Email:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/viewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginBottom="15dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tex12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginBottom="15dp"
                    android:text="Contact:"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Work Experience"
                    android:drawableLeft="@drawable/ic_skills"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Education"
                    android:drawableLeft="@drawable/ic_education"
                    android:textColor="@color/subheading"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/heading"
                    android:text="Save"
                    android:textStyle="bold"
                    android:paddingLeft="20dip"
                    android:textColor="@color/white"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>