<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/program_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/program" />

        <TextView
            android:id="@+id/program_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/program_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/subheading"
            android:layout_toRightOf="@id/program_image"
            android:fontFamily="@font/baloo_bhaina"
            android:text="PESO"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/program_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/program_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/program_image"
            android:rating="4" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/program_rating"
            android:layout_toRightOf="@id/program_image"
            android:paddingLeft="10dp"
            android:text="The Public Employment Service Office (PESO) is a.." />


    </RelativeLayout>

</androidx.cardview.widget.CardView>